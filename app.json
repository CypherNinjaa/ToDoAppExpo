{
  "expo": {
    "name": "TaskShell",
    "slug": "TaskShell",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/taskshell-icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/taskshell-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1b26"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "package": "com.taskshell.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/taskshell-icon.png",
        "backgroundColor": "#1a1b26"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": ["POST_NOTIFICATIONS"],
      "jsEngine": "hermes"
    },
    "web": {
      "favicon": "./assets/taskshell-icon.png"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "sounds": [],
          "mode": "production"
        }
      ]
    ]
  }
}
